@model IEnumerable<RestaurantRaterMVC.Models.Rating.RatingListItem>
<!--basically a using statement, right? could we do an actual using statement instead?-->


@{
    ViewData["Title"] = "Ratings";
}

<h1>Ratings</h1>

<a asp-action="Create">Rate a Restaurant</a>
<!--switched this from the @Html version-->

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
        </tr>
    }
</table>